  "timezone": "America/Toronto",
  "schedule": [
    "before 5pm on wednesday"
  ],
  "addLabels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "{{manager}}",
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "extends": [
    "config:best-practices",
    "group:recommended"
  ]
}
